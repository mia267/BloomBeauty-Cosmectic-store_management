<%= form_with(model: order) do |form| %>
<% if order.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% order.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :product_id, class: label_class %>
          <%= form.collection_select :product_id, Product.all, :id, :name, {prompt: true} %>
      </div>
  <div class="mb-6">
        <%= form.label :customer_id, class: label_class %>
          <%= form.collection_select :customer_id, Customer.all, :id, :name, {prompt: true} %>
      </div>
  <div class="mb-6">
        <%= form.label :quantity, class: label_class %>
          <%= form.number_field :quantity, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.text_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :delivery_address, class: label_class %>
          <%= form.text_field :delivery_address, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :payment_method, class: label_class %>
          <%= form.text_field :payment_method, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :note, class: label_class %>
          <%= form.text_area :note, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if order.persisted? %>
<%= link_to "Cancel", order, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", orders_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
